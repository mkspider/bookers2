
<% if @user.errors.any? %>
  <%= @user.errors.count %>error
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class ="container">
  <div class ="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>User info</h2>
  <%= form_with model: @user do |f| %>
   <div class="form-group">
     <label for="user_name">Name</label>
     <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"current_user.name", class: "form-control name" %>
   </div>

   <div class="form-group">
      <label for="user_Image">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file user-image" %>
   </div>
   <div class="form-group">
      <label for="user_inputIntroduction">Introduction</label>
      <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class: "form-control introduction" %>
   </div>
    <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-secondary" %>
    </div>

    <% end %>
    </div>
  </div>
</div>