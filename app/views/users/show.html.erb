<%= notice %>
 <div class="row">
   <div class="col-md-3">
   <%= render 'books/list', user: @user, book: @book %>
   </div>
   <div class ="col-md-8 offset-md-1">
     <h2>Books</h2>
   <table class="table table-hover table-inverse">
       <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opnion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
          <tr>
            <td></td>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>