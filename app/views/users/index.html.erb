<%= notice %>
  <div class="row">
    <div class="col-md-3">
    <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table ">
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td></td>
              <td>
                <%= link_to user_path(user.id) do %>
                  <p>
                    <%= image_tag user.get_profile_image(100,100) %>
                  </p>
                  <% end %>
              </td>
              <td>
                <%= link_to user.name, user_path(user.id) %>
              </td>
              <td>
                 <%= link_to 'Show', "/users/#{@user.id}" %>
              </td>
            </tr>
             <% end %>
         </tbody>
      </table>
    </div>
  </div>