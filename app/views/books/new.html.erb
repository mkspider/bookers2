<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>






<h1>画像投稿フォーム</h1>
  <%= form_with model: @book,url:'/books' do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Body</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>