<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book, url:book_path(@book.id), method: :patch do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
    <%= link_to 'Show', "/books/#{@book.id}" %>
    <span><a href="/books">Back</a></span>
  <% end %>